<h1>投稿一覧</h1>

<td><%= link_to '新規作成', new_post_path %></td>

<table>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
    <td><%= post.context %></td>
    <td><%= link_to '削除', post, method: :delete, data: { confirm: 'You sure?' }, class: "btn btn-danger" %></td>
    </tr>

    <% end %>
  </tbody>
</table>