<h1>投稿一覧</h1>

<td><%= link_to '新規作成', new_post_path %></td>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>

<table>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
    <td><%= post.context %></td>
    <td><%= post.user.name %></td>
    <td><%= image_tag post.image if post.image.attached? %></td>
    <td><%= link_to '削除', post, method: :delete, data: { confirm: 'You sure?' }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>



  </tbody>
</table>